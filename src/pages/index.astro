---
import Layout from "../layouts/Layout.astro";
---

<Layout title="andreepratama.dev">
  <main class="flex flex-col items-center justify-center w-full min-h-screen">
    <section class="blog-content w-full max-w-2xl grid grid-cols-2 items-center">
      <div class="blog-content__left px-4 md:px-0">
        <p class="text-2xl pb-4">
          Ahoy!, <span class="bold-underline">I'm Andre.</span>
        </p>
        <p class="leading-7">
          I mainly work as a Web Developer and in a pursuit to learn and create
          something interesting.
        </p>
      </div>

      <div class="blog-content__right w-full">
        <img src="/jumping.svg" alt="jumping" class="w-full h-full object-contain" />
      </div>
    </section>
  </main>
</Layout>
