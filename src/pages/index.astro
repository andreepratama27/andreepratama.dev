---
import Layout from "../layouts/Layout.astro";
---

<Layout title="andreepratama.dev">
  <main class="flex flex-col items-center justify-center w-full min-h-screen">
    <section class="blog-content w-full max-w-2xl grid grid-cols-2">
      <div class="blog-content__left">
        <p class="text-2xl pb-4">
          Hi, <span class="bold-underline">I'm Andre.</span>
        </p>
        <p class="leading-7">
          I mainly work as a Web Developer and in a pursuit to learn and create
          something interesting.
        </p>
      </div>
    </section>
  </main>

  <footer class="max-w-2xl m-auto relative">
    <div
      class="footer-wrapper flex items-center justify-center absolute bottom-10 w-full"
    >
      Currently listening&nbsp;<span class="italic"
        >Dream Theater - Panick Attack
      </span>&nbsp;on
      <img class="w-8 h-8 ml-2" src="/spotify.png" alt="spotify-logo" />
    </div>
  </footer>
</Layout>
