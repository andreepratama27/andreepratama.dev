---
import Layout from "../layouts/Layout.astro";
import BlogList from "../components/BlogList/BlogList.astro";
const posts = await Astro.glob("./blog/*.md");
---

<Layout title="Blog | andreepratama.dev">
  <main class="flex flex-col items-center w-full pt-10 h-screen">
    <div class="max-w-2xl w-full py-14 mt-4 blog-container">
      {posts.map((post) => <BlogList {...post} />)}
    </div>
  </main>
</Layout>

<style>
  @media (max-width: 600px) {
    .blog-container {
      padding: 0 16px;
    }
  }
</style>
