---
import Layout from "../layouts/Layout.astro";
import BlogList from "../components/BlogList";
---

<Layout title="Blog | andreepratama.dev">
  <main class="flex flex-col items-center w-full pt-10 h-screen">
    <div class="max-w-2xl py-14 blog-container">
      <BlogList />
    </div>
  </main>
</Layout>

<style>
  @media (max-width: 600px) {
    .blog-container {
      padding: 0 16px;
    }
  }
</style>
