---
import Logo from "./Logo";
---

<nav class="w-full px-3 py-6 fixed navbar-fixed bg-white">
  <div
    class="flex flex-wrap items-center justify-between max-w-2xl mx-auto layout nav-wrapper"
  >
    <div class="brand font-semi">
      <Logo />
    </div>
    <div class="menu">
      <ul class="flex gap-6">
        <li>
          <a href="/blog" class="px-8 py-1 border border-b-2 border-black"
            >.Blog
          </a>
        </li>
        <li>
          <a href="/about" class="px-8 py-1 border border-b-2 border-black"
            >.AboutMe
          </a>
        </li>
      </ul>
    </div>
  </div>
</nav>

<style>
  @media (max-width: 470px) {
    .menu {
      display: none;
    }
  }
</style>
